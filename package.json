{
  "name": "broomy",
  "version": "1.0.0",
  "description": "Multi-agent session manager for AI coding assistants",
  "type": "module",
  "main": "out/main/index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "dist": "pnpm build && electron-builder --mac && chmod +x dist/mac-arm64/Broomy.app/Contents/Resources/app/node_modules/node-pty/prebuilds/darwin-arm64/spawn-helper",
    "dist:dir": "pnpm build && electron-builder --mac --dir",
    "start": "open dist/mac-arm64/Broomy.app",
    "test": "playwright test",
    "test:headed": "E2E_HEADLESS=false playwright test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "postinstall": "electron-builder install-app-deps && chmod +x node_modules/node-pty/prebuilds/darwin-*/spawn-helper 2>/dev/null || true"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-serialize": "^0.14.0",
    "@xterm/xterm": "^5.5.0",
    "monaco-editor": "^0.55.1",
    "node-pty": "^1.0.0",
    "path-browserify": "^1.0.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "simple-git": "^3.22.0",
    "zustand": "^4.4.7"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "node-pty"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/node": "^20.10.0",
    "@types/path-browserify": "^1.0.3",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "playwright": "^1.58.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^4.0.18"
  }
}
