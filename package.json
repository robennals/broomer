{
  "name": "Broomy",
  "version": "1.0.0",
  "description": "Multi-agent session manager for AI coding assistants",
  "author": "Rob Ennals <rob.ennals@gmail.com>",
  "homepage": "https://broomy.org",
  "type": "module",
  "main": "out/main/index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "node scripts/dev-preflight.cjs",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "dist": "pnpm build && electron-builder --mac",
    "dist:signed": "bash scripts/dist-signed.sh",
    "dist:mac": "pnpm build && electron-builder --mac",
    "dist:win": "pnpm build && electron-builder --win",
    "dist:linux": "pnpm build && electron-builder --linux",
    "dist:all": "pnpm build && electron-builder --mac --win --linux",
    "dist:dir": "pnpm build && electron-builder --mac --dir",
    "start": "electron .",
    "start:dist": "pnpm dist:dir && open dist/mac-arm64/Broomy.app",
    "test": "playwright test",
    "test:headed": "E2E_HEADLESS=false playwright test",
    "screenshots": "playwright test tests/screenshots.spec.ts",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "website": "pnpm --filter broomy-website dev",
    "release": "gh release create v$npm_package_version dist/*.dmg dist/*.zip dist/*.exe dist/*.AppImage dist/*.deb --title \"Broomy v$npm_package_version\" --generate-notes",
    "postinstall": "electron-builder install-app-deps && node scripts/postinstall.cjs"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-serialize": "^0.14.0",
    "@xterm/xterm": "^5.5.0",
    "monaco-editor": "^0.55.1",
    "node-pty": "^1.0.0",
    "path-browserify": "^1.0.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "simple-git": "^3.22.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@types/path-browserify": "^1.0.3",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.5.0",
    "jsdom": "^28.0.0",
    "playwright": "^1.58.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^5.0.10",
    "vitest": "^4.0.18"
  }
}
